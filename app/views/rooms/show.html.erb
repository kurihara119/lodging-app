<div class="container room-show">
  <div class="row">
    <div class="col-md-8">
      <%= image_tag @room.image.url, class: "room-show-image" %>
      <div class="room-show-detile">
        <div class="room-show-detile-icon">
          <%= link_to root_path do %>
            <% if @user.image? %>
              <%= image_tag current_user.image.url, alt: "プロフィール画像", class: "icon-image host-icon" %>
            <% else %>
              <%= image_tag "logo.jpeg", alt: "プロフィール画像", size: "200", class: "icon-image host-icon" %>
            <% end %>
          <% end %>
        </div>
        <div class="room-show-profile">
          <p class="room-show-profile-name"><%= @room.room_name %></p>
          <p class="room-show-profile-address"><%= @room.address %></p>
        </div>
      </div>
      <p class="room-show-detile-content"><%= @room.room_text %></p>
    </div>
    <div class="col-md-4">
      <div class="room-show-nav">
        <h5 class="price-icon"><%= @room.price %> / 日</h5>
        <div class="room-show-date-select">
          <%= form_with model: @reservation, url: new_reservation_path, method: :get, class: "new-room", local: true do |f| %>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.hidden_field :room_id, value: @room.id %>
            <%= f.label :start_day, "開始日" %>
            <%= f.date_field :start_day, class: "form-control mb-4" %>
            <%= f.label :end_day, "終了日" %>
            <%= f.date_field :end_day, class: "form-control mb-4" %>
            <%= f.label :number_people, "人数" %>
            <%= f.number_field :number_people, class: "form-control mb-4" %>
            <%= f.submit "予約する", class: "btn btn-primary form-control" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
