<div class="container-fiuld reservations">
  <h4 class="pb-4">予約済みルーム一覧</h4>
  <table>
    <thead>
      <tr>
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>合計料金</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>予約確定日時</th>
      </tr>
    </thead>
    <tbody>
    <% @reservations.each do |f| %>
      <tr>
        <td>
          <%= link_to "/rooms/#{f.room_id}" do %>
            <%= image_tag f.room.image.url ,size: '240x140', class: "reservations-image" %>
          <% end %>
        </td>
        <td class="posts-name">
          <%= link_to "/rooms/#{f.room_id}" do %>
            <%= f.room.room_name %>
          <% end %>
        </td>
        <td class="posts-content"><%= f.room.room_text %></td>
        <td class="price-icon"><%= f.total_amount %></td>
        <td><%= f.start_day %></td>
        <td><%= f.end_day %></td>
        <td><%= f.created_at %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
